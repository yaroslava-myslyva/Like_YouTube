<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.likeyoutube">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.LikeYouTubeApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.LikeYouTube"
        tools:targetApi="31">
        <activity
            android:name=".YouTubeActivity"
            android:exported="false"
            android:label="@string/title_activity_yactivity2"
            android:theme="@style/Theme.LikeYouTube.NoActionBar" />

        <meta-data
            android:name="com.example.likeyoutube"
            android:value="true" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>