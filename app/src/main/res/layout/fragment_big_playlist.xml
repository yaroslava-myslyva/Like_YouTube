<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.big_playlist.BigPlaylistFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="@color/browser_actions_bg_grey"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/browser_actions_bg_grey"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="240dp"

                    android:layout_height="wrap_content"
                    android:contentDescription="image" />
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_big_playlist"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="8dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:contentDescription="Назад"
            android:src="@drawable/round_arrow_back_24" />

        <ImageButton
            android:id="@+id/pauseButton"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:contentDescription="Пауза"
            android:layout_marginHorizontal="2dp"
            android:src="@drawable/round_pause_24" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:contentDescription="Вперед"
            android:layout_marginHorizontal="2dp"
            android:scaleX="-1"
            android:src="@drawable/round_arrow_back_24" />

    </LinearLayout>

</LinearLayout>