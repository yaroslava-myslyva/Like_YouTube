<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">

    <Button
        android:id="@+id/button_save_my_playlists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save my playlists"
        app:layout_constraintBottom_toTopOf="@id/button_unique_videos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_unique_videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unique videos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_delete_duplicates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete duplicates"
        app:layout_constraintTop_toBottomOf="@id/button_unique_videos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_restore_my_playlists" />

    <Button
        android:id="@+id/button_restore_my_playlists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restore my playlists"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_delete_duplicates" />

</androidx.constraintlayout.widget.ConstraintLayout>